<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailsMovieNameText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@color/colorPrimaryDark"
                android:gravity="bottom|left"
                android:paddingBottom="30dp"
                android:paddingLeft="20dp"
                android:text=""
                android:textSize="@dimen/movie_name_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="6"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/detailsMoviePoster"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailsReleaseDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textSize="@dimen/release_date_text_size" />


                    <TextView
                        android:id="@+id/detailsRatingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textSize="@dimen/movie_details_text_size" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/detailsMovieDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="3"
            android:text=""
            android:textSize="@dimen/movie_description_text_size" />

    </LinearLayout>

</ScrollView>